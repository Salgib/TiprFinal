<div class="container">
  {{#each model as |review|}}
    {{log review}}
    <div class="reviews-thumbnail">
      <li class="row">
        <center>
          <div class="col-md-12">
          <h4 class="review-title">
            {{#link-to 'reviews.show' review}}
              {{review.title}}
            {{/link-to}}
            <span class="delete-btn-main pull-right">{{confirm-button title="Delete" action="deleteReview" param=review}}</span>
          </h4>
        </div>
        </center>

      </li>

          <center>
            <li>{{review.stars}} Stars!</li>
            <li class="review-body">{{review.body}}</li>
          </center>


    </div>
  {{/each}}

  {{#link-to 'reviews.create'}}
    <button class="create-review-btn">Write a review!</button>
  {{/link-to}}

</div>
